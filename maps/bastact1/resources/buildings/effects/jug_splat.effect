<?xml version="1.0" encoding="UTF-8"?>
<effect>
	<definitions>
		<particlesystem name="system0" space="world" scale=".7">

			<sound
				falloffstart="500"
				falloffend="2500"
				volume=".65"
				sample="sounds/sfx_impact_jug.wav"
