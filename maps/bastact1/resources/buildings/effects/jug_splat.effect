				endsize="65"
				midsizepos=".05"
				color=".5 0 .2"
				startalpha=".35"
				midalpha=".35"
				endalpha="0"
			/>

			<groundsprite
				delay="100"
				position="0 -10 0"
				life="1000"
				material="/shared/effects/smaterials/puke.material"
				startsize="50"
				midsize="105"
				endsize="105"
				midsizepos=".15"
				color=".5 0 0.2"
				startalpha=".35"
				midalpha=".35"
				endalpha="0"
			/>

			<groundsprite
				delay="100"
				position="0 0 0"
				life="1000"
				material="/shared/effects/smaterials/whitedot_ground.material"
				startsize="40"
				midsize="142"
				endsize="142"
				midsizepos=".1"
				startcolor="1 0 0"
				midcolor=".5 0 0.2"
				endcolor="0 0 0"
				midcolorpos=".8"
			/>
			
