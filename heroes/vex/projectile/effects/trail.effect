			<simpleemitter
				spawnrate="33"
				particlelife="5000"
				minangle="0"
				maxangle="0"				
				direction="0 0 0"
				inheritvelocity="0.1"
				
			>
				<particle
					turn="true"
					lockup="true"
					lockright="true"					
				>
