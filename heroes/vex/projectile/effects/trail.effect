						lockup="1"
						lockright="1"						
						directionalspace="local"
					/>
				
				</particle>
			</simpleemitter>
			
			
			
			<simpleemitter
				spawnrate="3333"
				count="1"
				particlelife="5000"
				minangle="0"
				maxangle="0"				
				direction="0 0 0"
				inheritvelocity="0.1"
				
			>
				<particle
