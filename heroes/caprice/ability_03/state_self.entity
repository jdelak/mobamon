<?xml version="1.0" encoding="UTF-8"?>
<state
	name="State_Caprice_Ability3_Self"

	maxcharges="2"
	ishidden="true"
	
>
	<oninflict>
		<playeffect effect="effects/sound.effect" source="this_proxy_entity" target="this_proxy_entity"/>
	</oninflict>

	<onrefresh>
		<addcharges />
		
		<compare a="charges" b="2" op="lt" >
			<playeffect effect="effects/sound.effect" source="this_proxy_entity" target="this_proxy_entity"/>
		</compare>
	</onrefresh>

</state>

