<?xml version="1.0" encoding="UTF-8"?>
<effect deferred="1" useentityeffectscale="1">
	<definitions>
	
		<particlesystem name="system0" space="entity" scale="1.75">

			<sound
				soundloop="true"
				fadein="200"
				fadeout="500"
				linearfalloff="true" 
				falloffstart="1000"
				falloffend="2500"
				volume=".45"
				sample="../sounds/state.wav"
			/>

			<billboard
				life="750"
				bone="_bone_centerofchest"
				material="/shared/effects/smaterials/whitedot.material"
				startcolor="0 .25 1"
				midcolor="0 .25 1"
				endcolor="0 0 0"
				startscale="3"
				endscale="5"
				depthbias="-50"
			/>
			
			
			<model
				life="500"
				bone="_bone_centerofchest"
				model="shields/model.mdf"
				anim="idle"
				color="1 1 1"
				startalpha="0"
				endalpha="1"
				startscale="1.25"
				endscale="1.25"
				yawspeed="720"
				directionalspace="world"
			>
			
				<billboard
				bone="_bone_fx_01"
					life="500"
					material="/shared/effects/smaterials/whitedot.material"
					startcolor="0 .35 1"
					midcolor="0 .35 1"
					endcolor="0 0 0"
					scale="2"
					depthbias="-100"
					startheight="50"
					endheight="200"
					width="40"
					directionalspace="local"
					lockup="true"
				/>
<!--
				<billboard
				bone="_bone_fx_01"
					life="600"
					material="/shared/effects/smaterials/whitedot.material"
					startcolor="1 1 1"
					midcolor="0 .35 1"
					endcolor="0 0 0"
					scale="2"
					depthbias="-100"
					startheight="50"
					endheight="75"
					width="30"
					directionalspace="local"
				/>
-->
			</model>

			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
		
			<model
			delay="500"
				expirelife="250"
				bone="_bone_centerofchest"
				model="shields/model.mdf"
				anim="idle"
				color="1 1 1"
				startalpha="1"
				endalpha="0"
				startscale="1.25"
				endscale="1.25"
				yawspeed="360"
				directionalspace="world"
			>
			
				<template name="glow">
					<billboard
						expirelife="250"
						bone="{zbone}"
						material="/shared/effects/smaterials/whitedot.material"
						startcolor="0 .05 .5"
						endcolor="0 0 0"
						scale="2"
						depthbias="-100"
					/>
				</template>
				
				<instance name="glow" zbone="_bone_fx_01"/>
				<instance name="glow" zbone="_bone_fx_02"/>

				<template name="swoosh">

					<billboard
						bone="_bone_root"
						position="{zpos}"
						life="2000"
						material="/shared/effects/smaterials/swoosh_ring.material"
						startcolor="0 .1 .35"
						midcolor="0 .1 .35"
						endcolor="0 .1 .35"
						startalpha="0"
						midalpha=".5"
						endalpha="0"
						size="90"
						lockup="1"
						lockright="1"
						pitch="-90"
						roll="{zroll}"
						directionalspace="local"
						loop="true"
					/>

				</template>
				
				<instance name="swoosh" zpos="0 0 -10" zstartcolor="0 0 0" zmidcolor="0 .25 .5" zendcolor="0 0 0" zroll="0"/>
				<instance name="swoosh" zpos="0 0 10" zstartcolor="0 .25 .5" zmidcolor="0 0 0" zendcolor="0 .25 .5" zroll="180"/>

			</model>
<!--
			<model
			delay="500"
				expirelife="250"
				bone="_bone_centerofchest"
				model="shields/model.mdf"
				material="/shared/effects/smaterials/shell_glass.material"
				anim="idle"
				color=".125 .6 1.25"
				startalpha="1"
				endalpha="0"
				startscale="1.25"
				endscale="0"
				yawspeed="360"
				directionalspace="world"
			/>
-->
	</particlesystem>
</definitions>

<thread>
	<spawnparticlesystem instance="instance0" particlesystem="system0" />
	<spawnmodifier instance="instance1" modifier="modifier0"/>  
	<waitfordeath instance="instance0" />
</thread>

</effect>







