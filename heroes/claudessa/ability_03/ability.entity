<?xml version="1.0" encoding="UTF-8"?>
<ability
	name="Ability_Claudessa3"

	icon="icon.tga"
	
	maxlevel="4"
	requiredlevel="1,3,5,7"

	actiontype="passive"
	
	cooldowntime="10000,9000,8000,7000"
	
	showareacast="true"
	areacastmaterial="/shared/materials/area_cast_indicator_spokes.material"
>
	<constant name="damage" value="20,30,40,50" adjustment="ability" />

	<!-- don't show in tool tip -->
	<constant name="slow" value="20" adjustment="none" noshowintooltip="true" />

	<onframe>
		<isready>
			<setactivemodifierkey name="claudessa3_ready" />
		</isready>
	</onframe>

	<onlearn>
		<setaccumulator value="0" />
	</onlearn>

	<onattackingdamageevent>
		<canactivate>
			<cantarget targetscheme="enemy_units" effecttype="AttackDamage">
				<combateffecttype effecttype="Attack">
					<setaccumulator value="0" />
					<spawnaffector name="Affector_Claudessa_Ability3_Small" param="damage_attempted" target="source_position" distance="-50" proxy="target_entity" />
					<spawnaffector name="Affector_Claudessa_Ability3_Effects" target="source_position" distance="-50" proxy="target_entity" />
					<startcooldown />
					<setactivemodifierkey name="" />
				</combateffecttype>
			</cantarget>
		</canactivate>
	</onattackingdamageevent>

	<onattackstart propagatetoillusions="false" >

		<canactivate>
			<cantarget targetscheme="enemy_units" effecttype="AttackDamage">

				<playanim name="ability_3" target="source_entity" />

				<setattackimpacteffect effect="" />
				<getconstant name="damage" adjustmentsource="this_entity" />
				<bonusdamageadd target="" a="result" />
				<setaccumulator value="1" />
			</cantarget>
		</canactivate>
	</onattackstart>
	
	<onattackimpact />

	<modifier key="claudessa3_ready" modpriority="100" passiveeffect="effects/state_ready.effect" attackrange="130"
	/>
	

</ability>
