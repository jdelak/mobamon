<?xml version="1.0" encoding="UTF-8"?>
<effect deferred="true">

	<definitions>

		<particlesystem name="system0" space="world" scale="1">

			<model
				parentskeleton="true"
				expirelife="100"
				model="weapon/model.mdf"
				anim="idle"
				startalpha="1"
				endalpha="0"
				color="2 1 3"
				directionalspace="local"
				startscale="1"
				endscale="1"
			/>
		
		
			<template name="glow">
				<billboard
					expirelife="250"
					bone="{zbone}"
					material="/shared/effects/smaterials/whitedot.material"
					startcolor=".10 0 .3"
					endcolor="0 0 0"
					scale="1"
					depthbias="-50"
				/>
			</template>
			
			<instance name="glow" zbone="_bone_weapon1"/>
			<instance name="glow" zbone="_bone_weapon2"/>
			<instance name="glow" zbone="_bone_weapon3"/>
			<instance name="glow" zbone="_bone_weapon4"/>
			
			
			<template name="glow">
				<billboard
					life="250"
					bone="{zbone}"
					material="/shared/effects/smaterials/whitedot.material"
					startcolor=".10 0 .3"
					endcolor="0 0 0"
					scale="5"
					depthbias="-50"
				/>
			</template>
			
			<instance name="glow" zbone="_bone_weapon1"/>
			<instance name="glow" zbone="_bone_weapon2"/>
			<instance name="glow" zbone="_bone_weapon3"/>
			<instance name="glow" zbone="_bone_weapon4"/>
			
		
		</particlesystem>

	</definitions>

	<thread>
		<spawnparticlesystem instance="instance0" particlesystem="system0" />
		<spawnmodifier instance="instance1" modifier="modifier0"/>  
		<waitfordeath instance="instance0" />
		<waitfordeath instance="instance1" /> 
	</thread>

</effect>