<?xml version="1.0" encoding="UTF-8"?>
<projectile
	name="Projectile_Claudessa_Ability1"

	speed="900"
	gravity="0"

	modelscale="2.5"
	model="/shared/effects/models/side_to_side/model.mdf"
	traileffect="effects/trail.effect"
	
	canturn="false"
	flying="true"
	flyheight="10"
	
	touchradius="180"
	touchpropradius="200"
	touchpropanim="hit"
	hazardradius="300"
	hazardoffset="120"
	maxtouchespertarget="1"
	touchtargetscheme="enemy_units_and_buildings"
	toucheffecttype="Magic Splash"
	touchradiusdiradjust="true"
	
	lifetime="-1"
>

	<ontouch>	
		<combatevent effecttype="Counterable">	
			<onimpact>
				<getconstant name="damage" adjustmentsource="this_entity" />
				<damage effecttype="Magic Splash" significant="true" amount="1" b="result" op="mult"/>
				<playeffect effect="effects/impact.effect" source="target_entity" target="target_entity" />
				<applystate name="State_Claudessa_Ability1" duration="1500" />
			</onimpact>
		</combatevent>
		<recordheroaggression  />
		<aggression />
	</ontouch>

	<onimpact>
		<spawnunit name="Gadget_Claudessa_Ability1_SecondCast" fixedposition="true" count="1" target="this_position" proxy="this_proxy_entity" />
	</onimpact>

</projectile>
