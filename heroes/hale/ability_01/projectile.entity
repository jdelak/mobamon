			<recordheroaggression  />
		    <aggression />
			<applystate name="State_Hale_Ability1_Enemy" duration="3000" />
		</hasbinds>
	</ontouch>

	<onframe>

	</onframe>

	<ondeath>
		<compare a="param" b="2" op="eq" >
			<setaccumulator value="param" entity="this_proxy_entity" />
		</compare>
	</ondeath>



</projectile>
