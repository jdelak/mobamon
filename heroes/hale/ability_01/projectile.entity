	canturn="false"

	deatheffect=""
	
	touchradius="125"
	touchpropradius="100"
	touchpropanim="flamehit"
	touchtargetscheme="enemy_units_and_buildings"
	toucheffecttype="Magic"
	maxtouchespertarget="1"


>


	<ontouch>
