<?xml version="1.0" encoding="UTF-8"?>
<material>
	
	<parameters shader="/shared/shaders/effect.shader" vDiffuseColor="1.0 1.0 1.0" fSpecularLevel="1.0" fGlossiness="32.0" fOpacity="0.5" fReflect="1.0"/>

	<phase name="shadow" cull="back" blend="alphatest">
		<sampler name="diffuse" texture="coin_diff.tga" repeat_u="true" repeat_v="true" />
	</phase>
	
	<phase name="color" cull="back" blend="none">
		<sampler name="diffuse" texture="coin_diff.tga" repeat_u="true" repeat_v="true" />
		<sampler name="normalmap" texture="/maps/bastact1/resources/heroes/bastion1Bastact1/normal.tga" repeat_u="true" repeat_v="true" />
	</phase>

	<phase name="fade" cull="back" colorwrite="false" alphawrite="false" depthwrite="true" blend="alphatest">
		<sampler name="diffuse" texture="coin_diff.tga" repeat_u="true" repeat_v="true" />
		<multipass cull="back" blend="translucent">
			<sampler name="diffuse" texture="coin_diff.tga" repeat_u="true" repeat_v="true" />
			<sampler name="normalmap" texture="coin_norm.tga" repeat_u="true" repeat_v="true" />
		</multipass>
	</phase>
</material>