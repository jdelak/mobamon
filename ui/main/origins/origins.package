			<label x="25s" y="-20s" font="maindyn_26" content="origins_act1" color="#fec038" outline="1" outlinecolor="0.53 0.34 0.01 0.22" align="center" valign="center" textalign="center" noclick="1" grow="1"/>
		</panel>
		
		<!-- Alt graphic click to play -->
		<panel y="-70s" name="selection_origins_primary_btn2" height="500s" valign="center" noclick="0"/>

		<instance id="select_mode_spe_splash_sound_wrapper_1" name="dialogWrapper1" x="150s" inneralpha="0 0 0 .9" outerpadding="+2h" innerpadding="+1h" noclick="1" visible="0" parent_height="80s" parent_width="370s" align="center" valign="bottom" y="-56s" />
		<panel name="select_mode_spe_splash_sound_wrapper_2" noclick="0" visible="0" color="invisible" height="80s" width="370s" align="center" valign="bottom" x="150s"  y="-56s" >		
			<panel noclick="1" height="100%" width="100%" y="0" visible="1" onclicklua="" onrightclicklua="" >
				<frame style="backerPanelShadow0" texture="/ui/elements:rounded_bg_white" borderthickness="0.75h" x="0.25h" y="0.25h" noclick="1"/>
				<frame style="backerPanelGray3" texture="/ui/elements:rounded_bg_white" borderthickness="0.75h" noclick="1"/>
				<image visible="01" texture="/ui/main/navigation/textures/alert.tga" x="10s" y="10s" width="40s" height="40s" align="left" valign="top" noclick="1" />
