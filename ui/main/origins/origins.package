			label="origin_splash_start_btn"
			disabledmouseover="true"
			disabledmouseout="true"
		/>

		<!-- Secondary Button -->
		<instance
			name="standardButton" y="-145s"
			id="selection_origins_secondary_btn" rendermode="grayscale" visible="1"
			x="-18s" width="170s" height="34s" align="right" valign="bottom"
			borderthickness="8s"
			label="origin_splash_back_btn"
		/>			
		
	</panel>	
	<lua file="/ui/main/origins/origins.lua"/>
</package>