<?xml version="1.0" encoding="UTF-8"?>
<package>
	<panel name="spendGems_backer" noclick="0" visible="0" color="0 0 0 0.5" />
	<panel name="spendGems" align="center" valign="center" width="38h" grow="true" regrow="true" noclick="true" visible="false"
		onshowlua="self:GetWidget('spendGems_backer'):FadeIn(250)"
		onhidelua="self:GetWidget('spendGems_backer'):FadeOut(250)"
	>
		<frame texture="/ui/shared/frames/rounded_bg_solid.tga" width="+40s" height="+40s" align="center" valign="center" borderthickness="14s" style="doubleFrameBg"/>
		<frame texture="/ui/shared/frames/border_double.tga" width="+40s" height="+40s" align="center" valign="center" style="doubleFrame" borderthickness="14s" color="invisible"/>
		
		<panel grow="1" width="100%" float="bottom" padding="20s">
		
			<panel height="28s" noclick="1">
				<label name="spendGemsTitle" textvalign="center" style="h1" font="maindyn_36" content="Spend Gems?"/>
				<instance name="iconButton"
					id="spendGemsClose"
					icon="/ui/main/shared/textures/close.tga"
					width="100@" height="100%" align="right" valign="top" borderthickness="4s"
				/>
			</panel>			
			<label name="spendGemsBody" fity="true" wrap="true" font="maindyn_36" textalign="center" style="labelBase" content="Long Item Description"/>	
			
			<panel height="115s">
				<panel width="60%" height="-5s" align="center">
					<panel width="+4s" height="+4s" align="center" valign="center">
						<frame texture="/ui/shared/frames/rounded_bg_solid.tga" borderthickness="6s" color="#0f2124"/>
						<frame texture="/ui/shared/frames/border_double.tga" style="doubleFrame" borderthickness="6s" color="invisible"/>
					</panel>
					<label name="spendGemsCostLabel" y="8s" textalign="center" font="maindyn_40" style="labelBase" content="game_shop_label_cost" noclick="1"/>
					<panel y="20s" grow="1" height="42s" align="center" valign="center" float="right" padding="5s">
						<label name="spendGemsCost" fitx="true" textvalign="center" font="maindyn_40" style="labelBase" content="---"/>
						<image texture="/ui/main/shared/textures/gem.tga" width="100@" height="100%"/>
					</panel>
					<panel y="85s" grow="1" height="42s" align="center" float="right" padding="5s">						
						<label name="spendGemsOwned" fitx="true" textvalign="center" font="maindyn_22" style="labelBase" color=".8 .8 .8 1" content="---" visible="0"/>
					</panel>
				</panel>
			</panel>
			
			<panel height="40s">
				<instance id="spendGemsOK" width="50%"  align="right" 
					name="standardButton"
					label="general_purchase"
					font="maindyn_30"
				/>	
				<!--  Buy Gems Button - Should replace Purchase when you have insufficient gems -->
				<instance id="spendGemsBuyGems" width="50%" align="right" 
					name="standardButton"
					label="buygems_title"
					font="maindyn_30"
					visible="0"
				/>
								
				<instance id="spendGemsCancel" align="left" width="32%"
					name="standardButton"
					rendermode="grayscale"
					label="general_cancel"
					font="maindyn_30"
				/>				
				
			</panel>
		
		</panel>

	</panel>
	
</package>