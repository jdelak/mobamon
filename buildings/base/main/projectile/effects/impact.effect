				material="/shared/effects/smaterials/cartoon_smack_white_add.material"
				depthbias="-25"
			>
				<particle
					color=".45 .65 1"
					startscale="50"
					endscale="100"
					turn="true"
				/>
			</simpleemitter>
			
			<billboard
				bone="_bone_centerofchest"
				startcolor="0 .5 1"
				midcolor="0 .5 1"
				endcolor="0 .5 1"
				life="250"
				startscale="15"
				endscale="0"
				material="/shared/effects/smaterials/streak_flare.material"
				depthbias="-30"
			/>


      </particlesystem>
