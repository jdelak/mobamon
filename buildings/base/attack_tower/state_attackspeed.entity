<?xml version="1.0" encoding="UTF-8"?>
<state
	name="State_TowerAttackSpeed"
	ishidden="true"
	attackspeedpercharge="0.2"
	maxcharges="3"
>
	<oninflict>
		<addcharges count="1" />
	</oninflict>

	<onrefresh>
		<addcharges count="1" />
	</onrefresh>

	<onattack >
		<targettype type="hero" />
		<else>
			<setcharges a="0" />
		</else>
	</onattack>



</state>
