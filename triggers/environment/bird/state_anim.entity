<?xml version="1.0" encoding="UTF-8"?>
<state
	name="State_EnvironmentTrigger_Bird_Anim"

	
	
	ishidden="true"
>
	<oninflict>
		<condition test="hasstate State_EnvironmentTrigger_Bird_FlownAway" target="source_entity" />
		<else>
			<playanim name="fly" target="source_entity"/>
			<playeffect effect="/world/sprops/graveyard/crow/flyaway.effect" target="source_entity"/>
			<applystate name="State_EnvironmentTrigger_Bird_FlownAway" target="source_entity" continuous="true" />
		</else>
	</oninflict>

</state>
